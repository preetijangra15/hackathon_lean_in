    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
        -ms-flex-direction: column;
            flex-direction: column;
    -webkit-box-pack: center;
        -ms-flex-pack: center;
            justify-content: center;
  }
  
  .main-login .login-contain .left-side .img-class {
  
    height: 3.5rem;
  }
  
  .main-login .login-contain .left-side .img-class #img-id {
    height: 80%;
    -o-object-fit: cover;
       object-fit: cover;
  }
  
  
  .main-login .login-contain .left-side input {
    display: block;
    border: none;
    height: 2rem;
    width: 70%;
    margin: auto;
    margin-bottom: 1.5rem;
    padding: 0.2rem 1rem;
    font-size: small;
    color: gray;
    -webkit-transition: all 0.1s ease-in-out;
    transition: all 0.1s ease-in-out;
  }
  
  .main-login .login-contain .left-side input:focus {
    outline: none;
    border: none;
  }
  
  .main-login .login-contain .left-side input:hover {
    outline: 0.5px solid #113f67;
    -webkit-box-shadow: 2px 2px 9px -2px #113f67;
            box-shadow: 2px 2px 9px -2px #113f67;
  }
  
  .main-login .login-contain .left-side label {
    display: block;
