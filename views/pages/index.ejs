    margin: 5rem auto;
    -webkit-box-shadow: 0.5rem 0.5rem 2rem -1rem #3a3939;
            box-shadow: 0.5rem 0.5rem 2rem -1rem #3a3939;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-pack: center;
        -ms-flex-pack: center;
            justify-content: center;
    -webkit-box-align: center;
        -ms-flex-align: center;
            align-items: center;
  }
  
  .main-login .login-contain .link {
    text-decoration: none;
    color: #113f67;
    -webkit-transition: all 0.3s ease;
    transition: all 0.3s ease;
  }
  
  .main-login .login-contain .link:hover {
    -webkit-transform: translateY(-5px);
            transform: translateY(-5px);
    color: gray;
  }
  
  .main-login .login-contain .left-side, .main-login .login-contain .right-side {
    margin: 2rem 2rem;
    -webkit-box-shadow: 0.5rem 0.5rem 2rem -1rem #3a3939;
            box-shadow: 0.5rem 0.5rem 2rem -1rem #3a3939;
