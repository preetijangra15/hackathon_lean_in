  .main-login {
    min-height: 100vh;
    min-width: 100vw;
    overflow-x: hidden;
    background: -webkit-gradient(linear, left top, right top, color-stop(50%, #dfdddd), color-stop(50%, #113f67));
    background: linear-gradient(to right, #a2a8d3 50%, #113f67 50%);
  }
  .main-login .login-contain {
    height: 75vh;
    width: 70%;
    background: -webkit-gradient(linear, left top, right bottom, from(rgba(255, 255, 255, 0.7)), to(rgba(236, 236, 236, 0.4)));
    background: linear-gradient(to right bottom, rgba(255, 255, 255, 0.7), rgba(236, 236, 236, 0.4));
