<body>
    <% if(errorMessage.length>0) { %>
        <div class="alert alert-danger" style="margin: 20px; text-align: center;">
            <h5>
                <%= errorMessage %>
            </h5>
        </div>
    <% } %>

    <% if(successMessage.length>0) { %>
        <div class="alert alert-success" style="margin: 20px; text-align: center;">
            <h5>
                <%= successMessage %>
            </h5>
        </div>
    <% } %>


        <div class="alert alert-primary" style="margin: 20px; text-align: center;">
            <h5>
                Please! Enter Your Registered Email Id to receicve Password Reset Link!
            </h5>
        </div>

        <div class="row justify-content-center">
            <div class= "card" style="width: 18rem;">
                <form class = "row" action="" method="post">

                    <div class="row mb-3">
                        <label for="email" class="form-label">Enter Registered e-mail</label>
                    </div>
                    <div class="row mb-3">
                        <input type="email" name="email" id="email">
                    </div>
                    <div class="row mb-2">
                        <input type="submit" class="btn btn-primary" value="Send Reset Link">
                    </div>
                 
                </form>
            </div>
        </div>
</body>

