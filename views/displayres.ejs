<%- include('partials/adminheader'); -%>
<div class="row">
<div class="col-md-3">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="section-title">
                <h2 data-aos="fade-in">Profile</h2>
            </div>
        </div>
    </div>
    <% let img = "assets/img/profile.png"; %>
    <% if(admin.imgurl !== ""){ %>
    <%    img = admin.imgurl; %>
    <% } %>
    <div class="row justify-content-center">
        <div class="col-md-9" data-aos="fade-left">
                <img src="<%=img%>" alt="profile pic" class="image">
        </div><br>
    </div> 
    <div class="row justify-content-center" >
        <div class="col-md-12 " data-aos="fade-right"><h4 style="color:rgb(252, 113, 58); text-align:center;"><%= admin.name %></h4></div>
    </div>
    <div class="row justify-content-center" >
        <div class="col-md-12 " data-aos="fade-right"><h4 style="text-align:center;">HR Manager</h4></div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-12 " data-aos="fade-right"><h5 style="text-align:center;"><a href="mailto:<%= admin.email %>"><%= admin.email %></a></h5></div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-12" data-aos="fade-right"><h5 style="text-align:center;"><%= admin.organization %></h5></div>
    </div>
   
    <div class="row justify-content-center" data-aos="fade-right">
        <div class="col-md-4 justify-content-right"><h5 style="text-align:right;"><a href="<%= admin.orgwebsite %>" target="_blank"><i class="fas fa-at fa-lg"></i></a></h5></div>
        <div class="col-md-4 justify-content-center"><h5 style="text-align:center;"><a href="<%= admin.linkedin %>" target="_blank"><i class="fab fa-linkedin fa-lg"></i></a></h5></div>
        <div class="col-md-4 justify-content-left"><h5 style="text-align:left;"><a href="mailto:<%= admin.email %>"><i class="fas fa-paper-plane"></i></a></h5></div>
        
    </div>
</div>
<div class="col-md-9 effect">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="section-title">
                <h2 style="color:rgb(132, 0, 255);" data-aos="fade-in">Candidates Interested for the role of <%= role %></h2>
            </div>
        </div>
    </div>
    <% var count=0; %>
    <div class="row">
         <% if(results.length===0){ %>
          <h5 style="margin-top:150px; text-align: center;">Nothing to display</h5>
         <% }else{ %>
         <% results.forEach((element)=>{ %>
            <% let img = "assets/img/profile.png"; %>
            <% if(element.imgurl !== ""){ %>
            <%    img = element.imgurl; %>
            <% } %>
            <%  if(count%3 == 0){ %>
                <div class="row">
            <% } %>
                <div class="col-md-4" data-aos="fade-up" data-aos-delay="100">
                    <div class="card" style="width: 18rem;">
                        <div class="row justify-content-center">
                            <div class="col-md-8">
                                <img class="card-img-top" style="border-radius:50%; height:150px" src="<%=img%>" alt="Card image cap">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="card-title col-12 justify-content-center" style="font-weight: 700; text-align:center;"><%= element.name %></div>
                            </div>
                            <div class="row">
                                <div class="card-subtitle mb-2 text-muted col-12 justify-content-center" style="font-weight: 700; text-align:center;"><%= element.degree %> (<%= element.gradyear%>)</div>
                            </div>
                            <div class="row">
                                <div class="col-12 justify-content-center" style="text-align:center;"><%= element.college %></div>
                            </div>
                            <div class="row justify-content-center" data-aos="fade-right">
                                <% if(element.cvurl === ""){ %>
                                    <div class="col-md-4 justify-content-right"><h5 style="text-align:right;"><a target="_blank" title="No Resume"><i class="fas fa-file-pdf fa-lg"></i></a></h5></div>
                                <% }else{ %> 
                                    <div class="col-md-4 justify-content-right"><h5 style="text-align:right;"><a href="<%= element.cvurl %>" target="_blank" title="View Resume"><i class="fas fa-file-pdf fa-lg"></i></a></h5></div>
                                <% } %>
                                <div class="col-md-4 justify-content-center"><h5 style="text-align:center;"><a href="<%= element.linkedin %>" target="_blank" title="LinkedIn Profile"><i class="fab fa-linkedin fa-lg"></i></a></h5></div>
                                <div class="col-md-4 justify-content-left"><h5 style="text-align:left;"><a href="mailto:<%= element.email %>" title="Email"><i class="fas fa-paper-plane"></i></a></h5></div>
                            </div>
                        </div>
                    </div>
                </div> 
                <% count++; %>
                <% if(count%3 == 0){ %>
                    </div>
                <% } %>
                    
          <% }); }%>
    </div>
</div>
</div>

<%- include('partials/footer'); -%>